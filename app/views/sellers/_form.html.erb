<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%= title %>
    </h3>
  </div>
  <%= form_with(model: seller, local: true, class:"form-horizontal") do |form| %>
    <div class="box-body">
        <div class="form-group">
          <label class="col-sm-2 control-label">
            <%= t(:registration, scope: [:activerecord, :attributes, :seller]) %>
          </label>
          <div class="col-sm-10">
            <%= form.text_field :registration, class: "form-control", placeholder: "Identidade" %>
            <p class="help-block">Apenas n√∫meros.</p>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 control-label">
            <%= t(:name, scope: [:activerecord, :attributes, :seller]) %>
          </label>
          <div class="col-sm-10">
            <%= form.text_field :name, class: "form-control", placeholder: "Nome" %>
          </div>
        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
      <%= link_to 'Voltar', sellers_path, class: "btn btn-default" %>
        <button type="submit" class="btn btn-info pull-right"><%= action_btn %></button>
    </div><!-- /.box-footer -->
  <% end %>
</div>

